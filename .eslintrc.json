{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            2
        ],
        "no-unused-vars": [
            1
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true,
                "ignoreStrings": true
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 2
            }
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "react/react-in-jsx-scope": "off"
    },
    "ignorePatterns": [
        ".next/*",
        "node_modules/*",
        "coverage/*"
    ]
}